<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="item">
        <item name="android:padding">5sp</item>
    </style>

    <style name="mainLabel">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="label">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5sp</item>
    </style>

    <style name="rowLabel">
        <item name="android:textColor">#000</item>
    </style>

    <style name="link">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#005580</item>
    </style>

    <style name="particle">
        <item name="android:textColor">#ff9933</item>
    </style>

    <style name="reading">
        <item name="android:textColor">#000</item>
    </style>

    <style name="tag">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="component_label">
        <item name="android:textColor">#9d261d</item>
    </style>

    <style name="onyomi_label">
        <item name="android:textColor">#f89406</item>
    </style>

    <style name="usefulness">
        <item name="colorControlNormal">#d3d3d3</item>
        <item name="colorControlActivated">#ffc40d</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

</resources>
